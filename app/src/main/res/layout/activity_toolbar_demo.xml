<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.guanhuawu.toolbardemo.ToolbarDemo">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?attr/colorPrimary"
        android:minHeight="44pt"
        android:theme="?attr/actionBarTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="手机号验证登录"
                android:textColor="#ffffff"
                android:textSize="11pt" />


        </LinearLayout>


    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <com.example.guanhuawu.toolbardemo.CounterView
                android:layout_width="150dp"
                android:layout_height="98dp" />

            <com.example.guanhuawu.toolbardemo.ClearEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@mipmap/ic_launcher"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/auxiliary_button_enable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/auxiliary_button_background_selector"
                android:enabled="true"
                android:text="按钮"
                android:textColor="@drawable/auxiliary_button_textcolor_selector"
                android:textSize="10pt" />

            <Button
                android:id="@+id/auxiliary_button_unenable"
                android:layout_width="match_parent"
                android:layout_height="22pt"
                android:layout_weight="0.00"
                android:background="@drawable/auxiliary_button_background_selector"
                android:enabled="false"
                android:text="按钮"
                android:textColor="@drawable/auxiliary_button_textcolor_selector"
                android:textSize="10pt" />

            <Button
                android:id="@+id/main_button_enable"
                android:layout_width="match_parent"
                android:layout_height="22pt"
                android:layout_weight="0.00"
                android:background="@drawable/main_button_background_selector"
                android:enabled="true"
                android:text="按钮"
                android:textColor="#FFFFFF"
                android:textSize="10pt" />

            <Button
                android:id="@+id/main_button_unenable"
                android:layout_width="199dp"
                android:layout_height="22pt"
                android:layout_weight="0.00"
                android:background="@drawable/main_button_background_selector"
                android:enabled="false"
                android:text="按钮"
                android:textColor="#FFFFFF"
                android:textSize="10pt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <com.example.guanhuawu.toolbardemo.PetImage
                android:id="@+id/first_circle_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></com.example.guanhuawu.toolbardemo.PetImage>

            <com.example.guanhuawu.toolbardemo.PetImage
                android:id="@+id/second_circle_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></com.example.guanhuawu.toolbardemo.PetImage>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
